<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}TP{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body>

        {% set route = app.request.get('_route') %}

        <header class="d-flex w-75 m-auto p-1 justify-content-between bg-primary-subtle">

            <p class="d-flex align-items-center p-0 m-0">TP</p>

            <nav class="navbar navbar-expand-lg gap-3">

                <div class="border border-secondary rounded p-1">
                    <a class="text-secondary text-decoration-none px-2 mx-1 {{ route == 'app_home' ? 'bg-primary text-white rounded' }}" href="{{ path('app_home') }}">Accueil</a>
                    <a class="text-secondary text-decoration-none px-2 mx-1 {{ route == 'app_article' ? 'bg-primary text-white rounded' }}" href="{{ path('app_article') }}">Article</a>
                    <a class="text-secondary text-decoration-none px-2 mx-1 {{ route == 'app_search' ? 'bg-primary text-white rounded' }}" href="{{ path('app_search') }}">Recherche</a>
                </div>

                <div class="border border-secondary rounded p-1">
                    <a class="text-secondary text-decoration-none px-2 mx-1 {{ route == 'app_time' ? 'bg-primary text-white rounded' }}" href="{{ path('app_time') }}">Time Page</a>
                    <a class="text-secondary text-decoration-none px-2 mx-1 {{ route == 'app_color' ? 'bg-primary text-white rounded' }}" href="{{ path('app_color') }}">Color Page</a>
                    <a class="text-secondary text-decoration-none px-2 mx-1 {{ route == 'app_client' ? 'bg-primary text-white rounded' }}" href="{{ path('app_client') }}">Client Ip Page</a>
                </div>

            </nav>
            
        </header>


        {% block body %}{% endblock %}
    </body>
</html>
